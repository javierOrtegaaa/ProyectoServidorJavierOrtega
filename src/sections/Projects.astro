---
import ProjectList from "../components/ProjectList";

const { language } = Astro.props;
---

<section id="PROJECTS" class="relative flex items-center justify-center min-h-screen py-12 px-6">
  <!-- Título de la sección alineado al centro de la pantalla -->
  <h2 
    id="projects-title" 
    class="text-5xl font-extrabold text-gray-800 mb-4 opacity-100 transform translate-x-0 transition-all duration-1000"
  >
    {language === 'es' ? 'PROYECTOS' : 'PROJECTS'}
  </h2>
  
  <!-- Contenedor para la línea decorativa -->
  <div class="flex flex-col items-center">
    <!-- Línea decorativa azul debajo del título -->
    <div class="w-16 h-1 bg-blue-500 mb-8"></div>

    <!-- Imagen decorativa centrada (si quieres agregar alguna imagen) -->
    <div class="flex justify-center mb-8">
      <!-- Puedes agregar una imagen aquí si lo deseas -->
    </div>
  </div>

  <!-- Lista de proyectos alineada a la izquierda -->
  <ProjectList client:only="react" />
</section>

<style>
  /* Asegúrate de que la sección tenga una altura mínima de 100vh */
  #PROJECTS {
    min-height: 100vh;  /* La altura de la ventana del navegador */
    display: flex;      /* Usamos flexbox para centrar los elementos */
    flex-direction: column;
    justify-content: center; /* Centra todo el contenido verticalmente */
    align-items: center;  /* Centra todo el contenido horizontalmente */
    padding-top: 4rem;  /* Asegura que haya espacio suficiente desde el menú */
  }

  /* Ajuste de la alineación de la línea decorativa */
  #projects-title + .w-16 {
    margin-left: 0; /* Ajustamos la línea para que no se desplace a la izquierda */
  }

  /* Ajustes para pantallas más pequeñas */
  @media (max-width: 767px) {
    #PROJECTS {
      padding-top: 2.5rem;  /* Menos espacio en pantallas pequeñas */
    }

    #projects-title {
      font-size: 3rem;  /* Ajustamos el tamaño del texto para pantallas pequeñas */
      margin-left: 1rem; /* Menos margen en pantallas pequeñas */
    }
  }
</style>
