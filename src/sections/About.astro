---
 // Importamos los datos
 import aboutData from '../data/data.json'; 
 const { language } = Astro.props;
 ---

<!-- Sección de "SOBRE MÍ" con 100vh de altura -->
<section id="ABOUTME" class="max-w-6xl mx-auto py-10 mt-16 px-8 pt-24 min-h-screen flex items-center justify-center">
    <div class="w-full flex flex-col md:flex-row items-center justify-between space-y-12 md:space-y-0 md:space-x-12 text-center md:text-left">
        
        <!-- Foto a la izquierda -->
        <div class="w-full md:w-1/3 flex justify-center mb-8 md:mb-0">
            <div class="w-48 h-48 md:w-64 md:h-64">
                <img
                    id="about-image"
                    src="/img/foto_javier.png"
                    alt="Javier Ortega"
                    class="w-full h-full rounded-full object-cover border-4 border-white shadow-lg opacity-0 translate-x-10 transition-all duration-500"
                />
            </div>
        </div>

        <!-- Texto a la derecha -->
        <div class="w-full md:w-2/3 text-left">
            <h2 id="about-title" class="text-5xl font-extrabold text-gray-800 mb-4">
                {language === 'es' ? 'SOBRE MÍ' : 'ABOUT ME'}
            </h2>

            <!-- Línea decorativa -->
            <div class="w-16 h-1 bg-blue-500 mx-auto mb-6" style="margin-left: 2rem;"></div>

            <h1 id="about-name" class="text-4xl font-semibold mb-4 opacity-0 translate-x-10 transition-all duration-500">
                Javier Ortega
            </h1>

            <p id="about-description" class="text-xl text-gray-700 mb-4 opacity-0 translate-x-10 transition-all duration-500">
                {language === 'es' ? 'Desarrollador Web | Programador | Apasionado por la tecnología' : 'Web Developer | Programmer | Passionate About Technology'}
            </p>

            <p id="about-text" class="text-lg text-gray-600 leading-relaxed opacity-0 translate-x-10 transition-all duration-500">
                {aboutData.about || 'Información sobre mí no disponible.'}
            </p>
        </div>
    </div>
</section>

<style>
    /* Asegura que la sección tenga suficiente espacio desde el menú */
    #ABOUTME {
        padding-top: 4rem;
        min-height: 100vh;
    }

    /* Transiciones para los elementos */
    #about-name, #about-description, #about-text, #about-image {
        transition: opacity 0.5s ease, transform 0.5s ease;
    }

    /* Ajustes para la línea decorativa */
    #about-title + .w-16 {
        width: 5rem;
        margin-left: 2rem;
    }

    @media (max-width: 767px) {
        #ABOUTME {
            padding-top: 2.5rem;
        }
    }
</style>

<script type="module" src="/src/styles/hero.js"></script>
