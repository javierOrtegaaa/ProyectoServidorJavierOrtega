---
import SkillButton from "../components/SkillButton";
const { language } = Astro.props;
---

<section id="SKILLS" class="relative flex flex-col items-center justify-center min-h-screen py-12 px-6">
  <!-- Título de la sección centrado -->
  <h2 
    id="skills-title" 
    class="text-5xl font-extrabold text-gray-800 mb-4 opacity-100 transform translate-x-0 transition-all duration-1000 text-center"
  >
    {language === 'es' ? 'HABILIDADES' : 'SKILLS'}
  </h2>
  
  <!-- Contenedor para la línea decorativa -->
  <div class="flex flex-col items-center mb-8">
    <!-- Línea decorativa azul debajo del título -->
    <div class="w-16 h-1 bg-blue-500 mb-8"></div>

    <!-- Componente SkillButton (Las tarjetas estarán en filas de 3, centradas) -->
    <div class="grid grid-cols-3 gap-6 w-full max-w-4xl justify-items-center" style="transform: translateX(150px);">
      <!-- Tarjetas distribuidas en las columnas -->
      <div class="flex justify-center w-full">
        <SkillButton client:load initialSkills={[ 
          { name: 'HTML', image: '/img/htmlLogo.png' }, 
          { name: 'CSS', image: '/img/cssLogo.png' }, 
          { name: 'JavaScript', image: '/img/javaScriptLogo.png' }
        ]} />
      </div>

      <!-- Segunda fila de 3 tarjetas -->
      <div class="flex justify-center w-full">
        <SkillButton client:load initialSkills={[ 
          { name: 'MySQL', image: '/img/mySql_logo.png' },
          { name: 'Figma', image: '/img/figmaLogo.png' },
          { name: 'Node.js', image: '/img/node.png' }
        ]} />
      </div>
    </div>
  </div>
</section>

<style>
  /* Aseguramos que la sección tenga al menos el 100% de la altura de la ventana del navegador */
  #SKILLS {
    min-height: 100vh;  /* Asegura que la sección ocupe toda la pantalla */
    display: flex;      /* Usamos flexbox para centrar todo el contenido */
    flex-direction: column;
    justify-content: center; /* Centra los elementos verticalmente */
    align-items: center;  /* Centra los elementos horizontalmente */
    padding-top: 4rem;  /* Ajusta el espacio superior si el menú cubre la parte superior */
  }

  /* Asegura que las tarjetas estén distribuidas en 3 columnas por fila y centradas */
  .grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);  /* Tres columnas */
    gap: 1.5rem;  /* Espacio entre las tarjetas */
    justify-items: center; /* Centra las tarjetas horizontalmente */
    align-items: center; /* Centra las tarjetas verticalmente */
  }

  /* Ajuste de la alineación de la línea decorativa */
  #skills-title + .w-16 {
    margin-left: 0; /* Ajusta la línea para que esté centrada bajo el título */
  }

  /* Ajustes para pantallas más pequeñas */
  @media (max-width: 1024px) {
    .grid {
      grid-template-columns: repeat(2, 1fr);  /* Dos columnas en pantallas medianas */
    }
  }

  @media (max-width: 767px) {
    .grid {
      grid-template-columns: 1fr;  /* Una columna en pantallas pequeñas */
    }

    #SKILLS {
      padding-top: 2.5rem;  /* Menos espacio en pantallas pequeñas */
    }

    #skills-title {
      font-size: 3rem;  /* Ajusta el tamaño del texto para pantallas pequeñas */
    }
  }
</style>
