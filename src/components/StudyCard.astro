---
const { title, school, description, imageSrc } = Astro.props;
---

<div class="flex flex-col gap-y-6 md:flex-row md:space-x-8 p-6 rounded-lg bg-gray-100 shadow-lg border-2 border-gray-200">
  <!-- Imagen de la carta -->
  <div class="w-full md:w-1/3">
    <div class="relative flex items-center justify-center rounded-lg overflow-hidden">
      <img 
        src={imageSrc} 
        alt={school} 
        class="object-cover w-full h-40 md:h-56 rounded-lg shadow-md" 
        loading="lazy" 
      />
    </div>
  </div>

  <!-- Contenido de la carta -->
  <div class="w-full md:w-2/3 text-left space-y-4">
    <h3 class="text-xl font-semibold text-gray-800">{title}</h3>
    <p class="text-md font-medium text-gray-600">{school}</p>
    <p class="text-sm text-gray-500 leading-relaxed">{description}</p>
  </div>
</div>
